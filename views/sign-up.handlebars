<div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
  <div class="card-header"><h2>Signup</h2></div>
  <div class="card-body">

    <form class="form signup-form">
      {{! get a username }}
      <div class="form-group">
        <label
          class="col-form-label col-form-label-sm mt-4"
          for="name-signup"
        >Username:</label>
        <input
          class="form-control form-control-sm"
          type="text"
          placeholder="Username"
          id="username"
        />
      </div>

      <div class="form-group">
        <label
          class="col-form-label col-form-label-sm mt-4"
          for="name-signup"
        >Email</label>
        <input
          type="email"
          class="form-control"
          id="email-signup"
          aria-describedby="emailHelp"
          placeholder="Enter email"
        />
      </div>

      {{! get a location }}
      <div class="form-group">
        <label
          class="col-form-label col-form-label-sm mt-4"
          for="name-signup"
        >Location</label>
        <input
          class="form-control form-control-sm"
          type="text"
          placeholder="Enter City"
          id="location"
        />
      </div>

      {{! get an age }}
      <div class="form-group">
        <label
          class="col-form-label col-form-label-sm mt-4"
          for="name-signup"
        >Age</label>
        <input
          class="form-control form-control-sm"
          type="text"
          placeholder="Must be 18 years or older"
          id="age-id"
        />
      </div>

      {{! get a password }}
      <div class="form-group">
        <label
          for="exampleInputPassword1"
          class="form-label mt-4"
        >Password</label>
        <input
          type="password"
          class="form-control"
          id="password-signup"
          placeholder="Password"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Sign-Up</button>

      </div>
    </form>

  </div>
</div>

<script src="./js/sign-up.js"></script>
