 <div style="align-items: center; margin-left: 20%; margin-top: 5%;">
  <div class="card border-primary mb" style="max-width: 60rem; align-items: center;">
    <!-- this should get the username -->
    <h2>Edit post</h2>
<div class="card-header">{{username}}</div>
<div class="card-body">
  <!-- category -->
   <div class="form-group">
     <p>Current: {{category}}</p>
    <p>What category is this post's category?</p>
    <div class="col-med-4">
      <div class="category ">
        <label>
          <input type="radio" name="advidce" id="category1" value="service" checked="">
          Service
        </label>
      </div>
      <div class="category">
        <label>
          <input type="radio" name="questions" id="category2" value="inquiry">
          Inquiry
        </label>
      </div>
      <div class="category">
        <label>
          <input type="radio" name="food" id="category3" value="products">
          Products
        </label>
        <div class="category">
          <label>
            <input type="radio" name="meetup" id="category4" value="meetup">
            Meet up
          </label>
        </div>
        <div class="category">
          <label>
            <input type="radio" name="meetup" id="category5" value="training">
            Training
          </label>
        </div>
      </div>
    </div>
  </div>
 <div class="form-group">
   <label for="exampleTextarea" class="form-label mt-4">Post Content :</label>
   <!-- the description shoul fill the text area for editing -->
   <textarea class="form-control" id="exampleTextarea" rows="3">{{description}}</textarea>
 </div>
 </div> 
 <button type="button" class="btn btn-success">Submit</button>
 <br>
</div>