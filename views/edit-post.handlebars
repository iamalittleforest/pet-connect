<!-- edit post -->
<div class="edit-post-card m-3">
    <div class="card border-primary">
      <form class="form post-form">
        <div class="card-header">Edit Post</div>
        <div class="card-body">
          <div class="form-group title mb-3">
            <label for="edit-post-title" class="form-label">Title</label>
            <textarea class="form-control" id="edit-post-title" rows="1">{{title}}</textarea>
          </div>
          <div class="form-group category mb-3">
            <label for="edit-post-category" class="form-label">Category: {{category}}</label>
            <div class="form-check">
              <label>
                <input type="radio" name="post-category" class="radio" id="inquiry" value="inquiry">
                Inquiry
              </label>
            </div>
            <div class="form-check">
              <label>
                <input type="radio" name="post-category" class="radio" id="meetup" value="meetup">
                Meet Up
              </label>
            </div>
            <div class="form-check">
              <label>
                <input type="radio" name="post-category" class="radio" id="products" value="products">
                Products
              </label>
            </div>
            <div class="form-check">
              <label>
                <input type="radio" name="post-category" class="radio" id="service" value="service">
                Service
              </label>
            </div>
            <div class="form-check">
              <label>
                <input type="radio" name="post-category" class="radio" id="training" value="training">
                Training
              </label>
            </div>
          </div>
          <div class="form-group description mb-3">
            <label for="edit-post-description" class="form-label">Description:</label>
            <textarea class="form-control" id="edit-post-description" rows="3">{{description}}</textarea>
          </div>
          <button type="submit" class="btn btn-success" id="update-post-btn">Update</button>
          <button type="submit" class="btn btn-success" id="delete-post-btn">Delete</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/edit-post.js"></script>