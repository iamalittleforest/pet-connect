<!-- sign up -->
<div class="login card bg-secondary m-3" style="width: 65vw">
  <form class="form login-form">
    <div class="card-header">
      <h4>Login</h4>
    </div>
    <div class="card-body">
      <div class="form-group species mb-3">
        <label for="login-email" class="form-label">Email</label>
        <textarea class="form-control" id="login-email" rows="1" placeholder="Enter Email"></textarea>
      </div>
      <div class="form-group age mb-4">
        <label for="login-password" class="form-label">Password</label>
        <input class="form-control" type="password" id="login-password" placeholder="Enter Password"></input>
      </div>
      <button type="submit" class="btn btn-primary" id="login-btn">Login</button>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>