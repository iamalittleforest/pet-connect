<div style="align-items: center; margin-left: 40%;">
  <div class="card border-secondary mb-3" style="max-width: 20rem;">
    <form action="" class="comment-form">
      <div class="card-header">Create a comment</div>
      <div class="card-body">
        <!-- add a user name here -->
        <p>Random user</p>
        <div class="form-group">
          <label for="exampleTextarea" class="form-label mt-4">add your comment</label>
          <textarea
            class="form-control"
            id="commentContent"
            rows="3"
          ></textarea>
          <button type="button" class="btn btn-success">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>

